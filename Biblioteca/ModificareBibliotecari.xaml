<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Biblioteca.ModificareBibliotecari">
    <ContentPage.Content>
        <StackLayout Margin="20">

            <Editor x:Name="Nume"  Text="{Binding Nume}" HeightRequest="100" />
            <Editor x:Name="Carte"  Text="{Binding Carte}" HeightRequest="100" />
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Text="Save" Clicked="OnSaveButtonBibliotecariClicked" BackgroundColor="#b3b3ff" />
                <Button Grid.Column="1" Text="Delete" Clicked="OnDeleteButtonBibliotecariClicked" BackgroundColor="#b3b3ff"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>